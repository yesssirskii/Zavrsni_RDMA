<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Zavrsni_RDMA_Matejcic_Ivan.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="PrimaryColor">#2471A3</Color>
            <Color x:Key="PrimaryWhite">#FFFFFF</Color>

            <Style x:Key="PrimaryButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}"></Setter>
                <Setter Property="TextColor" Value="{StaticResource PrimaryWhite}"></Setter>
            </Style>
            <Style x:Key="HeadingLabel" TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource PrimaryColor}"></Setter>
                <Setter Property="FontSize" Value="Title"></Setter>
                <Setter Property="FontAttributes" Value="Bold"></Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>